<%- include ('../partials/header') %>
<div class="container my-5">
  <header>
    <h1>Teams</h1>
  </header>
  <hr>

  <div class="content">
    <% for (let team of teams) { %>
      <div class="card my-5">
        <div class="card-header">
          <div class="card-header clearfix">
          <h5 class="card-title">
            Team: <%= team.teamName %>
          </h5>
        </div>
        <div class="card-footer">
          <a href="/teams/<%= team.id %>/edit"><i class="fa fa-edit">&nbsp;</i>Edit your team</a>
          <br>
          <form class="form-inline" action="/teams/delete" method="post" onsubmit="return confirm('Are you sure you want to delete your team?');">
            <input type="hidden" value="<%= team.id %>" name="id">
            <button class="delete" type="submit">
              <i class="fa fa-trash">&nbsp;</i>
              Delete Team
            </button>
          </form>
        </div>
      </div>
    <% } %>
  </div>
</div>
<%- include ('../partials/footer') %>